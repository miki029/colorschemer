<link rel="stylesheets" href="user.show.css">
<div class="mypage">

  <div class="mypage8">
      <div class="mypagetop">
      <h2>マイページ</h2>
      </div>

    <div class="mypage7">
      <div class="mypage1">

        <% if @user.image.attached? %>
            <%= image_tag  @user.image, size: '50x40'%>
        <% end %>

        <p>名前 : <%= @user.name %></p>
        <p>メールアドレス : <%= @user.email %></p>
        <p>プロフィール : <%= @user.profile %></p>
        <div class="button2">
        <% if current_user.id == @user.id %>
          <%= link_to "編集する", edit_user_registration_path %>
        <% end %>
        </div>
      </div>

      <div class="mypage6">
        <div class="mypage2">

          <h3>ユーザーの投稿一覧</h3>
          <% @user.tweets.each do |t| %>
            <%= t.user.name %>
            <%= t.color %>
          <br>
            <% end %>
        </div>

        <div class="mypage3">
          <h3>ユーザーがいいねした投稿一覧</h3>
          <% @user.liked_tweets.each do |t| %>
            <%= t.user.name %>
            <%= t.color %>
          <br>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>